{
	"name": "amWiki",
	"displayName": "amWikiForVSCode",
	"description": "本项目是一款轻量型的wiki文库编辑器，通过移植Atom中的amWiki项目所得",
	"version": "0.0.1",
	"publisher": "yaoxuanzhi",
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:amWiki.create",
		"onCommand:amWiki.catalogue",
		"onCommand:amWiki.makeNav",
		"onCommand:amWiki.pasteImg",
		"onCommand:amWiki.runServer",
		"onCommand:amWiki.browser",
		"onCommand:amWiki.exportTogitHub"
	],
	"main": "./lib/main",
	"contributes": {
		"commands": [
			{
				//基于当前config.json创建wiki
				"command": "amWiki.create",
				"title": "基于当前config.json创建wiki"
			},
			{
				//在当前文档上抓取h2、h3为页内目录
				"command": "amWiki.catalogue",
				"title": "在当前文档上抓取h2、h3为页内目录"
			},
			{
				//手动更新当前文库导航
				"command": "amWiki.makeNav",
				"title": "手动更新当前文库导航"
			},
			{
				//粘帖截图
				"command": "amWiki.pasteImg",
				"title": "粘帖截图"
			},
			{
				//启动node静态服务器
				"command": "amWiki.runServer",
				"title": "启动node静态服务器"
			},
			{
				//浏览打开当前页面
				"command": "amWiki.browser",
				"title": "浏览打开当前页面"
			},
			{
				//导出项目为 github wiki
				"command": "amWiki.exportTogitHub",
				"title": "导出项目为github wiki"
			}
		],
		"menus": {
			//定制文档编辑器上的右键菜单
			"editor/context": [
				//定制amWiki专属菜单组
				{
					"when": "resourceLangId == markdown",
					"command": "amWiki.pasteImg",
					"group": "amWikiMenu@1"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "amWiki.catalogue",
					"group": "amWikiMenu@2"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "amWiki.makeNav",
					"group": "amWikiMenu@3"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "amWiki.browser",
					"group": "amWikiMenu@4"
				}
			],
			//定制资源管理器上的弹出菜单
			"explorer/context": [
				{
					//点击此菜单项后响应的事件
					"command": "amWiki.create",
					//指定此菜单项出现在那个菜单群组上
					"group": "navigation"
				}
			]
		},
		//绑定快捷键响应
		"keybindings": [
			{
				//设置触发此快捷键生效的时机，如不指定，则默认为任何时机
				// "when": "editorHasSelection",
				//此快捷键触发后所执行的事件
				"command": "amWiki.pasteImg",
				//Windows下的快捷键设置
				"key": "shift+ctrl+alt+v",
				//Mac OS下的快捷键设置
				"mac": "cmd+f1"
			}
		]
	},
	"devDependencies": {
		"vscode": "0.10.x"
	}
}